import streamlit as st
from datetime import datetime
import matplotlib.pyplot as plt

# ===== IMPORT YOUR BACKEND FUNCTIONS =====
from NewsArticleSearch import (
    get_search_news_results, 
    country_list, country_dict, 
    language_list, language_dict
)

# Streamlit App
st.set_page_config(page_title="News Article Search", layout="wide")

st.title("ðŸ“° News Article Search App")

# ========== SEARCH INPUTS ==========
query = st.text_input("Search Query")

language = st.selectbox("Select Language", [""] + language_list)
country = st.selectbox("Select Country", [""] + country_list)

search_button = st.button("Search")

if "offset" not in st.session_state:
    st.session_state.offset = 0

if search_button:
    st.session_state.offset = 0

# Backend values
lang_code = language_dict.get(language.title(), None)
country_code = country_dict.get(country.title(), None)

# ========== SEARCH RESULTS ==========
if query:
    data = get_search_news_results(query, lang_code, country_code, offset=str(st.session_state.offset))

    if not data:
        st.warning("No results found.")
    else:
        total = data["available"]
        st.write(f"### ðŸ“Š Total Articles Found: {total}")

        # Show 5 articles
        for article in data["news"]:
            with st.container():
                st.subheader(article["title"])
                st.write(f"**Author:** {article['author']}")
                st.write(f"**Published:** {article['publish_date']}")

                # Find language name
                lang_name = next((name for name, code in language_dict.items() if code == article["language"].lower()), "")
                country_name = next((name for name, code in country_dict.items() if code == article["source_country"].lower()), "")

                st.write(f"**Language:** {lang_name} | **Country:** {country_name}")

                text_preview = article["text"][:280].replace("\n", " ") + "..."
                st.write(text_preview)

                st.write(f"[Read Full Article]({article['url']})")

                st.markdown("---")

        # ========== PAGINATION ==========
        col1, col2, col3, col4 = st.columns(4)

        with col1:
            if st.button("<< First"):
                st.session_state.offset = 0

        with col2:
            if st.button("< Prev") and st.session_state.offset > 0:
                st.session_state.offset -= 5

        with col3:
            if st.button("Next >") and st.session_state.offset + 5 < total:
                st.session_state.offset += 5

        with col4:
            if st.button("Last >>"):
                st.session_state.offset = (total // 5) * 5

        st.write(f"**Page:** {st.session_state.offset//5 + 1}")

# ========== SEARCH TREND GRAPH ==========
if st.button("Generate Search Trend"):
    if not query:
        st.warning("Search first before generating trend.")
    else:
        all_dates = []

        # Fetch up to 100 articles
        for off in range(0, 100, 5):
            data = get_search_news_results(query, lang_code, country_code, offset=str(off))
            if not data:
                break
            for article in data["news"]:
                try:
                    dt = datetime.fromisoformat(article["publish_date"].replace("Z", ""))
                    all_dates.append(dt.date())
                except:
                    pass

        date_count = {}
        for d in all_dates:
            date_count[d] = date_count.get(d, 0) + 1

        dates = sorted(date_count.keys())
        counts = [date_count[d] for d in dates]

        fig, ax = plt.subplots()
        ax.plot(dates, counts)
        ax.set_title(f"Search Trend for '{query}'")
        ax.set_xlabel("Date")
        ax.set_ylabel("Number of Articles")

        st.pyplot(fig)
